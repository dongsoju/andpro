<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/first_mountain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="추천등산코스"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_weight="5"/>
    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/img" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_weight="3">

        <Button
            android:id="@+id/btnCou"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_weight="85"
            android:backgroundTint="#4A977C"
            android:text="새인봉에서-입석대코스"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="31dp"
            android:layout_height="27dp"
            android:layout_weight="5"
            app:srcCompat="@drawable/tabong" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="27dp"
            android:layout_weight="5"
            app:srcCompat="@drawable/sadmoticon" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_weight="3">

        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_weight="85"
            android:text="당산나무코스"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="31dp"
            android:layout_height="27dp"
            android:layout_weight="5"
            app:srcCompat="@drawable/tabong" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="27dp"
            android:layout_weight="5"
            app:srcCompat="@drawable/sadmoticon" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_weight="3">

        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_weight="85"
            android:text="시무지기폭포 코스"
            android:textSize="20sp"/>

        <ImageView
            android:layout_width="31dp"
            android:layout_height="27dp"
            android:layout_weight="5"
            app:srcCompat="@drawable/tabong" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="27dp"
            android:layout_weight="5"
            app:srcCompat="@drawable/sadmoticon" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_weight="3">

        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_weight="85"
            android:text="안양산 - 북산 코스"
            android:textSize="20sp"/>

        <ImageView
            android:layout_width="31dp"
            android:layout_height="27dp"
            android:layout_weight="5"
            app:srcCompat="@drawable/tabong" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="27dp"
            android:layout_weight="5"
            app:srcCompat="@drawable/sadmoticon" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_weight="3">

        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_weight="85"
            android:text="교리 - 만연산코스"
            android:textSize="20sp"/>

        <ImageView
            android:layout_width="31dp"
            android:layout_height="27dp"
            android:layout_weight="5"
            app:srcCompat="@drawable/tabong" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="27dp"
            android:layout_weight="5"
            app:srcCompat="@drawable/sadmoticon" />

    </LinearLayout>

    <Button
        android:id="@+id/btnDan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:text="위험정보"
        android:textSize="20sp"/>


</LinearLayout>